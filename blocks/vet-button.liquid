<style>
  [data-block-id="{{ block.id }}"].vet-button:hover {
    background-color: {{ block.settings.bg_color_hover }};
    color: {{ block.settings.text_color_hover }};
  }

  /* Mobile Styles */
  @media (max-width: 749px) {
    [data-block-id="{{ block.id }}"].vet-button {
      text-align: {{ block.settings.mobile_alignment }} !important;
      font-size: {{ block.settings.mobile_font_size }}px !important;
      padding: {{ block.settings.mobile_padding_vertical }}px {{ block.settings.mobile_padding_horizontal }}px !important;
      border-radius: {{ block.settings.mobile_border_radius }}px !important;
    }
  }
</style>

<a
  data-block-id="{{ block.id }}"
  {% if block.settings.link != nil %}
    href="{{ block.settings.link }}"
  {% endif %}
  class="vet-button"
  style="
    display:inline-block;
    text-decoration:none;
    text-align:{{ block.settings.alignment }};
    background-color:{{ block.settings.bg_color }};
    color:{{ block.settings.text_color }};
    font-size:{{ block.settings.font_size }}px;
    font-weight:{{ block.settings.font_weight }};
    padding:{{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    border-radius:{{ block.settings.border_radius }}px;
    border:{{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    transition: all 0.3s ease;
  "
  {{ block.shopify_attributes }}
>
  {{ block.settings.label }}
</a>

{% schema %}
{
  "name": "Vet Button",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },

    {
      "type": "header",
      "content": "Desktop Styles"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "left",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 10,
      "max": 40,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "font_weight",
      "label": "Font Weight",
      "min": 300,
      "max": 900,
      "step": 100,
      "default": 600
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Padding Vertical",
      "min": 0,
      "max": 30,
      "unit": "px",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Padding Horizontal",
      "min": 0,
      "max": 50,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 50,
      "unit": "px",
      "default": 6
    },
    {
      "type": "range",
      "id": "border_width",
      "label": "Border Width",
      "min": 0,
      "max": 5,
      "unit": "px",
      "default": 0
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FEBB65"
    },
    {
      "type": "color",
      "id": "bg_color_hover",
      "label": "Background Hover Color",
      "default": "#f5a93f"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color_hover",
      "label": "Text Hover Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#000000"
    },

    {
      "type": "header",
      "content": "Mobile Styles"
    },
    {
      "type": "select",
      "id": "mobile_alignment",
      "label": "Mobile Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "mobile_font_size",
      "label": "Mobile Font Size",
      "min": 10,
      "max": 40,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "mobile_padding_vertical",
      "label": "Mobile Padding Vertical",
      "min": 0,
      "max": 30,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "mobile_padding_horizontal",
      "label": "Mobile Padding Horizontal",
      "min": 0,
      "max": 50,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "mobile_border_radius",
      "label": "Mobile Border Radius",
      "min": 0,
      "max": 50,
      "unit": "px",
      "default": 6
    }
  ]
}
{% endschema %}
